<% layout("/layouts/boilerplate") %>

<body>
      <h2 class="mt-3">All Listings</h2> <br>
    <div class="row rows-cols-1 row-cols-sm-2 row-cols-lg-5 g-3">
    <% for (list of listing) { %> 
        <div class="col">
    <div class="card h-100 listing-card">
        <a href="/listings/<%= list._id %>" class="listing-link">
  <img src="<%=list.img.url%>" class="card-img-top" alt="image" style=" height: 170px; object-fit: cover ;" >
    <div class="card-img-overlay"></div>
  <div class="card-body" >
    <p class="card-text">
        <b><%= list.description %></b> <br>
         &#8377 <%= list.price.toLocaleString("en-IN") %> for 2 nights
     </p>
    </a>
   </div>
  </div>
 </div>
   <% } %>
   </div>
</body>



