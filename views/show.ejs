<% layout("/layouts/boilerplate") %>

<body>
<h3 class="mt-2 offset-3"> <b><%= listing.title %></b></h3>
<div class="card offset-3 listing-card" style="width: 20rem;">
  <img src="<%= listing.img.url %>" class="card-img-top" alt="image" style="height: 18rem; width: 30rem; "> 
  <div class="card-body">
    <p class="card-text">
       <i>owned by :</i> <b> <%= listing.owner.username %> </b> <br>
        <%= listing.description %> <br>
        &#8377 <%= listing.price.toLocaleString("en-IN")%> <br>
        <%= listing.location %> <br>
        <%= listing.country %>
    </p>
  </div>
</div>
   <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="buttons offset-3 ml-2 mb-2 ">
     <form action="/listings/<%=listing._id %>/edit" method="get" class="me-4">
        <button type="submit" class="btn btn-dark">Edit</button>
    </form>
     <br>
    <form action="/listings/<%=listing._id %>?_method=Delete" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
</div>
<hr>
   <% } %>
 
  <% if (currUser) { %>
<div class="review offset-3">
   <h4>Leave your Review</h4>
   <form action="/listings/<%=listing._id %>/reviews" method="post" class="needs-validation" novalidate>
    <div class="mb-2">
       <label for="rating">Rating</label>
     <input type="range" id="rating" min="1" max="5" class="form-range"  name="review[rating]" >
    </div>
      <div class="mb-1">
            <label for="comment" class="form-label">Comments</label>
            <textarea class="form-control" 
                      name="review[comment]"  
                      id="comment" rows="5" 
                      required></textarea>
          <div class="invalid-feedback">  Please add a comment</div>
      </div>
      <button type="submit" class="btn  btn-outline-dark mt-2 mb-3">Submit</button>
   </form>
</div>
<hr>
  <% } %>
<div class="offset-3 col-6">
  <p><b>All Reviews</b></p>
  <div class="row">
     <% for (let review of listing.reviews ) { %>
      <div class="col-md-6 mb-3 ">
        <div class="card">
          <div class="card-body">
           <h6 class="card-title">@<%= review.author.username %></h6>
           <p class="card-text"><%= review.comment %></p>
           <p class="card-text"><%= review.rating %> star</p>
           <% if (currUser && currUser._id.equals(review.author._id)) { %>
         <form action="/listings/<%=listing._id %>/reviews/<%= review._id %>?_method=Delete" method="post">
           <button class="btn btn-outline-danger">Delete</button>
         </form>
         <% } %>
          </div>
      </div>
    </div>
      
     <% } %>
  </div>
</div>





</body>
