<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <h3 class="text-center mb-4"><b><%= listing.title %></b></h3>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card listing-card">
        <img
          src="<%= listing.img.url %>"
          class="card-img-top"
          alt="Image"
          style="object-fit: cover; height: 18rem;"
        >
        <div class="card-body">
          <p class="card-text">
            <i>Owned by:</i> <b><%= listing.owner.username %></b><br>
            <%= listing.description %><br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.location %>, <%= listing.country %>
          </p>
        </div>
      </div>

      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="d-flex justify-content-between mt-3">
          <form action="/listings/<%= listing._id %>/edit" method="get">
            <button type="submit" class="btn btn-dark">Edit</button>
          </form>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>

  <% if (currUser) { %>
    <div class="row justify-content-center mt-5">
      <div class="col-md-6">
        <h4>Leave your Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="rating">Rating</label>
            <input type="range" id="rating" min="1" max="5" class="form-range" name="review[rating]">
          </div>
          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea
              class="form-control"
              name="review[comment]"
              id="comment"
              rows="5"
              required
            ></textarea>
            <div class="invalid-feedback">Please add a comment</div>
          </div>
          <button type="submit" class="btn btn-outline-dark w-100">Submit</button>
        </form>
      </div>
    </div>
  <% } %>

  <hr class="mt-5">

  <div class="row justify-content-center">
    <div class="col-md-8">
      <h5 class="mb-3"><b>All Reviews</b></h5>
      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="col-md-6 mb-4">
            <div class="card">
              <div class="card-body">
                <h6 class="card-title">@<%= review.author.username %></h6>
                <p class="card-text"><%= review.comment %></p>
                <p class="card-text"><%= review.rating %> star</p>
                <% if (currUser && currUser._id.equals(review.author._id)) { %>
                  <form
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                    method="post"
                  >
                    <button class="btn btn-outline-danger btn-sm">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
