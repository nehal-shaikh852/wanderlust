<% if (success && success.length) { %>
    <div class="alert alert-success col-5 offset-3 alert-dismissible fade show" 
     style="height: 3rem" role="alert">
  <%= success %>
  <button type="button" 
          class="btn-close" 
          data-bs-dismiss="alert"
           aria-label="Close">
  </button>
</div>

<% } %>


<% if (error && error.length) { %>
    <div class="alert alert-danger col-5 offset-3 alert-dismissible fade show" 
     style="height: 3rem" role="alert">
  <%= error %>
  <button type="button" 
          class="btn-close" 
          data-bs-dismiss="alert"
           aria-label="Close">
  </button>
</div>

<% } %>